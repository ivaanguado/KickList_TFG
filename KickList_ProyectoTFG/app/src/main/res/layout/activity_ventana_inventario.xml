<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".VentanasInventario.VentanaInventario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#02075D"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btn_volver_inventario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-180"
            app:srcCompat="@drawable/salir" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#02075D"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_ver_stock"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Ver Stock"
            android:textColor="#02075D" />

        <Button
            android:id="@+id/btn_modificar_stock"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/white"
            android:text="Modificar Stock"
            android:textColor="#02075D" />

        <Button
            android:id="@+id/btn_aniadir_producto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:backgroundTint="@color/white"
            android:text="AÃ±adir Producto"
            android:textColor="#02075D" />
    </LinearLayout>

</LinearLayout>