<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VentanasEstadisticas.VentanaConsultarDatosZapatilla">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azul_oscuro"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_consultar_datos"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="SKU o Nombre producto"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_buscar_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/azul_claro"
                android:text="Buscar" />
        </LinearLayout>

        <GridView
            android:id="@+id/gridView_consultar_datos"
            android:layout_width="350dp"
            android:layout_height="550dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_volver_consultar_datos"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul_barras"
            android:text="Volver" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>