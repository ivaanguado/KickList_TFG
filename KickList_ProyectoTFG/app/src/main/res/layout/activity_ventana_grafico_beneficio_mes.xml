<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentanasEstadisticas.VentanaGrafico_BeneficioMes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azul_oscuro"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="550dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordes_azules"
            android:orientation="horizontal">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChartGrafico"
                android:layout_width="370dp"
                android:layout_height="550dp"
                android:layout_gravity="center">

            </com.github.mikephil.charting.charts.BarChart>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bordes_azules"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spn_anio_grafico_beneficio"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_volver_grafico_beneficio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/azul_barras"
            android:text="Volver" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>